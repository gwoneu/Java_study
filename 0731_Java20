public class Class05 {

	public static void main(String[] args) {
		String greeting = "Hello";
		String sentence = greeting + "Professor";
		String world = "Hello World.";
		String world2 = "hello world.";
		
		System.out.println(sentence);
		System.out.println(sentence.length());
		System.out.println(sentence.toLowerCase());
		System.out.println(sentence.toUpperCase());
		System.out.println(greeting.replace('l','z'));
		System.out.println(greeting.substring(2)); //문자를 서브로 만들어버림. 잘라버림 substring(a) -> a부터 끝까지
		System.out.println(sentence.substring(2,9)); //substring(a,b) -> a부터 b전까지
		
		System.out.println(sentence.charAt(4));
		System.out.println(sentence.indexOf("f")); //해당 ""의 위치를 알려줌 (여러개면 가장 앞에 있는 것을 찾아서 반환)
		System.out.println(sentence.indexOf("p")); //-1
		System.out.println(sentence.lastIndexOf('l')); //가장 뒤에 있는 것을 찾아서 반환
		
		System.out.println(greeting.concat(sentence)); //+로 사용(문자열끼리 더할때)
		System.out.println(greeting.equals("Hello"));
		System.out.println(greeting.equalsIgnoreCase("hello"));
		System.out.println(greeting.compareTo("Aello")); //A가 H보다 7번째 앞에 있다.
		System.out.println(greeting.compareTo("Hello")); //0이 나오면 같은 문자
		System.out.println(greeting.compareTo("Hezzo")); //l보다 z가 14번째 뒤에 있다.

		
		
		// 2. equalsIgnoreCase를 사용하지 않고, 2개의 문자열을 서로 비교해보자.
		boolean isEqual = world.toLowerCase().equals(world2.toLowerCase());
		
		
		// 3. indexOf 문자열의 처음, 마지막에 특정 위치를 알 수 있었다. 그러면 해당 문자열에 원하는 문자가 몇 개 들어있는지
		
		
		
	}

}


// String -> 변수가 아니다.
// 클래스 -> 객체구나

